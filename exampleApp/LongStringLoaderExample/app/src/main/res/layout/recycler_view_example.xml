<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/long_string_layout"
    android:padding="10dp">

    <RelativeLayout android:id="@+id/loading_layout" android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <ProgressBar android:id="@+id/loading_progress" android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/loading_progress"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26sp"
            android:text="Loading..."
        />
    </RelativeLayout>

</LinearLayout>